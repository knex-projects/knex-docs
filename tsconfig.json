{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "strictNullChecks": true,
        "paths": {
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"]
        },
        "rootDir": "./src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules"
    ]
  }